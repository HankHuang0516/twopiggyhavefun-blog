// Sidebar Component - Complete Pixnet Category Structure
import { getCollection } from 'astro:content';
import { 
    getCategorySlug,
    PIXNET_CATEGORY_HIERARCHY,
    regionNames 
} from '../utils/categories';

const BASE_URL = '/twopiggyhavefun-blog';

// Helper to fix image paths
function fixImagePath(src: string | undefined): string {
    if (!src) return `${BASE_URL}/placeholder.jpg`;
    if (src.startsWith('http')) return src;
    if (src.startsWith('/') && !src.startsWith(BASE_URL)) {
        return `${BASE_URL}${src}`;
    }
    return src;
}

// Get all posts sorted by date
const allPosts = await getCollection('posts');
allPosts.sort((a, b) => new Date(b.data.date).valueOf() - new Date(a.data.date).valueOf());
const recentPosts = allPosts.slice(0, 5);

// Track seen titles to avoid duplicates
const seenTitles = new Set<string>();

// Build category stats dynamically from posts
// Structure: parentCategory -> subcategory -> posts[]
type CategoryStats = {
    [parent: string]: {
        total: number;
        subcategories: { [sub: string]: any[] };
    };
};

const categoryStats: CategoryStats = {};

// Initialize all parent categories from PIXNET_CATEGORY_HIERARCHY
for (const [parentName, config] of Object.entries(PIXNET_CATEGORY_HIERARCHY)) {
    categoryStats[parentName] = {
        total: 0,
        subcategories: {}
    };
    // Initialize all known subcategories
    for (const sub of config.subcategories) {
        categoryStats[parentName].subcategories[sub] = [];
    }
}

// Categorize all posts
allPosts.forEach(post => {
    const title = post.data.title || '';
    
    // Skip duplicates by title
    const normalizedTitle = title.replace(/\s+/g, ' ').trim().slice(0, 30);
    if (seenTitles.has(normalizedTitle)) {
        return;
    }
    seenTitles.add(normalizedTitle);
    
    const category = post.data.category || '';
    if (!category) {
        // No category - put in 其他/未分類文章
        categoryStats['其他'].total++;
        if (!categoryStats['其他'].subcategories['未分類文章']) {
            categoryStats['其他'].subcategories['未分類文章'] = [];
        }
        categoryStats['其他'].subcategories['未分類文章'].push(post);
        return;
    }
    
    // Find which parent category this belongs to
    let foundParent = '';
    let foundSub = category;
    
    for (const [parentName, config] of Object.entries(PIXNET_CATEGORY_HIERARCHY)) {
        // Check if category is the parent itself
        if (category === parentName) {
            foundParent = parentName;
            foundSub = category;
            break;
        }
        // Check if category is a known subcategory
        if (config.subcategories.includes(category)) {
            foundParent = parentName;
            foundSub = category;
            break;
        }
    }
    
    // If not found in known subcategories, use getCategorySlug to find parent
    if (!foundParent) {
        const slug = getCategorySlug(category);
        for (const [parentName, config] of Object.entries(PIXNET_CATEGORY_HIERARCHY)) {
            if (config.slug === slug) {
                foundParent = parentName;
                foundSub = category; // Use original category name as subcategory
                break;
            }
        }
    }
    
    // Default to 其他 if still not found
    if (!foundParent) {
        foundParent = '其他';
    }
    
    // Add to stats
    if (!categoryStats[foundParent]) {
        categoryStats[foundParent] = { total: 0, subcategories: {} };
    }
    categoryStats[foundParent].total++;
    
    if (!categoryStats[foundParent].subcategories[foundSub]) {
        categoryStats[foundParent].subcategories[foundSub] = [];
    }
    categoryStats[foundParent].subcategories[foundSub].push(post);
});

// Helper to get unique posts
function getUniquePosts(posts: any[]) {
    return [...new Map(posts.map((p: any) => [p.slug, p])).values()];
}

// Stats
const stats = {
    today: Math.floor(Math.random() * 1000) + 500,
    total: 297216779
};

// Get parent category order (same as Pixnet)
const parentOrder = [
    '國內美食', '國內旅遊', '國內住宿', '國外旅遊', '時尚流行', '開箱',
    '親子育兒', '婚禮大小事', '生活綜合', '股票投資/房地產', 'Arduino應用',
    '實用的工具網站', '其他'
];
---

<aside class="sidebar w-full lg:w-80 space-y-6">
    <!-- Article Categories -->
    <div class="bg-white border border-gray-200 p-4">
        <h3 class="text-lg font-bold mb-3 text-red-600">文章</h3>
        
        <!-- Expand/Collapse Links -->
        <div class="text-sm mb-3">
            <a href="javascript:void(0)" id="expandAll" class="text-blue-600 hover:underline">展開全部</a>
            <span class="text-gray-400 mx-1">|</span>
            <a href="javascript:void(0)" id="collapseAll" class="text-blue-600 hover:underline">收合全部</a>
        </div>
        
        <div class="dtree text-sm space-y-1">
            {parentOrder.map((parentName) => {
                const stats = categoryStats[parentName];
                if (!stats || stats.total === 0) return null;
                
                const config = PIXNET_CATEGORY_HIERARCHY[parentName as keyof typeof PIXNET_CATEGORY_HIERARCHY];
                const parentSlug = config?.slug || 'other';
                const catId = `cat-${parentSlug}`;
                
                // Get subcategories with posts, sorted by count
                const subsWithPosts = Object.entries(stats.subcategories)
                    .filter(([_, posts]) => posts.length > 0)
                    .sort((a, b) => b[1].length - a[1].length);
                
                return (
                    <div class="dtree-node">
                        <div class="flex items-center py-1">
                            <button class="toggle-btn w-5 text-gray-500" data-target={catId}>
                                <span class="toggle-icon">▶</span>
                            </button>
                            <a href={`${BASE_URL}/category/${parentSlug}`} class="font-medium text-gray-800 hover:text-blue-600">
                                {parentName}
                            </a>
                            <span class="text-gray-400 text-xs ml-1">({stats.total})</span>
                        </div>
                        <div class="sub-categories ml-5 border-l border-gray-200 pl-3 hidden" id={catId}>
                            {subsWithPosts.map(([subName, posts]) => {
                                const uniquePosts = getUniquePosts(posts);
                                const subId = `sub-${parentSlug}-${subName.replace(/[^\w\u4e00-\u9fff]/g, '')}`;
                                
                                return (
                                    <div class="py-0.5">
                                        <div class="flex items-center">
                                            <button class="toggle-btn w-4 text-gray-400 text-xs" data-target={subId}>
                                                <span class="toggle-icon">▶</span>
                                            </button>
                                            <span class="text-blue-600 ml-1">{subName}</span>
                                            <span class="text-gray-400 text-xs ml-1">({uniquePosts.length})</span>
                                        </div>
                                        <div class="sub-posts ml-4 border-l border-gray-100 pl-2 hidden max-h-32 overflow-y-auto" id={subId}>
                                            {uniquePosts.slice(0, 8).map((post: any) => (
                                                <a href={`${BASE_URL}/posts/${post.slug}`} class="block text-blue-500 hover:underline text-xs py-0.5 truncate">
                                                    · {post.data.title}
                                                </a>
                                            ))}
                                            {uniquePosts.length > 8 && <span class="text-gray-400 text-xs">...還有 {uniquePosts.length - 8} 篇</span>}
                                        </div>
                                    </div>
                                );
                            })}
                        </div>
                    </div>
                );
            })}

            <!-- 全部文章 -->
            <div class="dtree-node mt-2 pt-2 border-t border-gray-200">
                <div class="flex items-center py-1">
                    <button class="toggle-btn w-5 text-gray-500" data-target="cat-all">
                        <span class="toggle-icon">▶</span>
                    </button>
                    <span class="font-medium text-blue-600">全部文章</span>
                    <span class="text-gray-400 text-xs ml-1">({allPosts.length})</span>
                </div>
                <div class="sub-posts ml-5 border-l border-gray-200 pl-3 hidden max-h-60 overflow-y-auto" id="cat-all">
                    {allPosts.slice(0, 20).map((post) => (
                        <a href={`${BASE_URL}/posts/${post.slug}`} class="block text-blue-500 hover:underline text-xs py-0.5 truncate">
                            · {post.data.title}
                        </a>
                    ))}
                    {allPosts.length > 20 && <span class="text-gray-400 text-xs">...還有 {allPosts.length - 20} 篇</span>}
                </div>
            </div>
        </div>
    </div>

    <!-- Website Stats -->
    <div class="bg-white border border-gray-200 p-4">
        <h3 class="font-bold mb-2 text-red-600">網站人氣統計</h3>
        <div class="text-sm text-gray-600">
            <p>今日人氣：<span class="font-medium">{stats.today.toLocaleString()}</span></p>
            <p>累計人氣：<span class="font-medium">{stats.total.toLocaleString()}</span></p>
        </div>
    </div>

    <!-- Recent Posts -->
    <div class="bg-white border border-gray-200 p-4">
        <h3 class="text-lg font-bold mb-4 text-red-600">近期文章</h3>
        <ul class="space-y-3">
            {recentPosts.map((post) => (
                <li>
                    <a href={`${BASE_URL}/posts/${post.slug}`} class="flex gap-3 group">
                        <img src={fixImagePath(post.data.cover)} 
                             alt={post.data.title}
                             class="w-16 h-16 object-cover flex-shrink-0" />
                        <div class="flex-1 min-w-0">
                            <p class="text-sm text-gray-800 group-hover:text-blue-600 line-clamp-2 transition">
                                {post.data.title}
                            </p>
                            <span class="text-xs text-gray-400">
                                {new Date(post.data.date).toLocaleDateString('zh-TW')}
                            </span>
                        </div>
                    </a>
                </li>
            ))}
        </ul>
    </div>

    <!-- Search -->
    <div class="bg-white border border-gray-200 p-4">
        <form action={`${BASE_URL}/search`} method="get" class="flex">
            <input type="text" name="q" placeholder="搜尋文章..." 
                   class="flex-1 border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:border-blue-500" />
            <button type="submit" class="bg-gray-800 text-white px-4 py-2 text-sm hover:bg-gray-700 transition">
                搜尋
            </button>
        </form>
    </div>
</aside>

<style>
    .sub-categories.hidden, .sub-posts.hidden { display: none; }
    .toggle-btn { cursor: pointer; background: none; border: none; padding: 0; font-size: 10px; }
    .toggle-icon { display: inline-block; transition: transform 0.2s; }
    .line-clamp-2 { display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; }
    .truncate { overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }
</style>

<script>
    document.querySelectorAll('.toggle-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
            e.preventDefault();
            const targetId = btn.getAttribute('data-target');
            if (!targetId) return;
            const target = document.getElementById(targetId);
            const icon = btn.querySelector('.toggle-icon');
            if (target) {
                const isHidden = target.classList.contains('hidden');
                target.classList.toggle('hidden');
                if (icon) icon.textContent = isHidden ? '▼' : '▶';
            }
        });
    });

    document.getElementById('expandAll')?.addEventListener('click', () => {
        document.querySelectorAll('.sub-categories, .sub-posts').forEach(el => el.classList.remove('hidden'));
        document.querySelectorAll('.toggle-icon').forEach(el => el.textContent = '▼');
    });

    document.getElementById('collapseAll')?.addEventListener('click', () => {
        document.querySelectorAll('.sub-categories, .sub-posts').forEach(el => el.classList.add('hidden'));
        document.querySelectorAll('.toggle-icon').forEach(el => el.textContent = '▶');
    });
</script>
